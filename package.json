{
  "name": "express-typescript-starter",
  "version": "0.0.0",
  "main": "build/dist/index.js",
  "author": "Kacper Wiszczuk <kacperwiszczuk@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node build/dist/index.js",
    "start:watch": "yarn build && nodemon build/dist/index.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "nyc mocha --reporter=nyan --require ts-node/register src/**/*.spec.ts",
    "test:watch": "nyc mocha --reporter=nyan --require ts-node/register -w src/**/*.spec.ts",
    "tslint": "tslint -c tslint.json --project tsconfig.json --type-check src/**/*.ts",
    "clear": "rimraf build"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.10",
    "@types/sinon": "^2.3.2",
    "@types/winston": "^2.3.3",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "winston": "^2.3.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "report-dir": "build/coverage",
    "all": true
  }
}
